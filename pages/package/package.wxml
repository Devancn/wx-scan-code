<view class="package-page">
  <!--组合销售  --> 
  <view wx:if="{{curItem.packageData.combination}}">
    <view class="group-item" wx:for="{{curItem.packageData.groupItem}}" wx:key="index" data-open="{{item.open}}" wx:for-index="index1">
      <view class="group-title" bindtap="controlOPen" data-index="{{index1}}">
        <text class="titile-left">
          <text>{{item.checkName}} - {{item.checkNum[0]}} 选 {{item.checkNum[1]}}</text> 
        </text>
        <view class="titile-right" catchtap="resetSelct"  data-index="{{index1}}">重选</view>
      </view>
      <view class="group-content">
        <view class="content-list" wx:for="{{item.list}}" wx:key="index" data-check="{{item.checked}}" data-groupindex="{{index1}}" data-listindex="{{index}}" catchtap="checkItem">
          <view class="content-left">
            <text>{{item.itemName}}</text>
             <view class="remarks" wx:if="{{item.checked && item.norm.length}}">{{item.normText}}</view>
          </view>
          <view class="btn-right" wx:if="{{item.norm}}"  data-groupindex="{{index1}}" data-listindex="{{index}}" catchtap="openStyle">
            <view class="btn-base">规格</view>
          </view>
          <view class="btn-right" wx:else>
            <view class="iconfont"></view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!--整单销售  -->
  <view wx:else class="group-item all">
    <view class="group-title">
      <text>{{curItem.packageData.packageName}}</text> 
    </view>
    <view class="group-content">
      <block wx:for="{{curItem.packageData.list}}" wx:key="index">
        <view class="content-list" data-check="true" catchtap="{{item.norm ? 'openStyle' : ''}}" data-index="{{index}}">
          <view class="content-left">
            <text>{{item.itemName}}</text>
            <view class="remarks" wx:if="{{item.normText}}">
              {{item.normText}}
            </view>
          </view>
          <view class="btn-right" wx:if="{{item.norm}}">
            <view class="btn-base">规格</view>
          </view>
          <view class="btn-right" wx:else>
            <view class="iconfont"></view>
          </view>
        </view>
      </block>  
    </view>
  </view>

  <!--规格弹窗  -->
  <view class="layer-area layer-goods-style" wx:if="{{layer.norm.show}}">
    <view class="layer-shade"></view>
    <view class="layer-page">
      <view class="layer-page-title">
        <text class="title-txt">{{layer.norm.data.name}}</text>
        <view class="iconfont close" bindtap="closeStyle"></view>
      </view>
      <scroll-view class="layer-page-content" scroll-y="true" scroll-with-animation="true">
        <view class="scroll-item" wx:for="{{layer.norm.data.style}}"  wx:key="index" wx:for-item="item1" wx:for-index="index1">
          <text class="style-name">{{item1.name}}</text>
          <view class="style-group" >
            <block wx:for="{{item1.value}}"  wx:key="index" wx:for-item="item2">
              <view class="style-item {{index === item1.chkIndex ? 'active' : ''}}" bindtap="tapItem" data-index="{{index}}" data-gouropIndex="{{index1}}">{{item2}}</view>
            </block>
          </view>
        </view>
      </scroll-view>
      <view class="botttom-message">
        <view class="price-box"></view>
        <view class="btn-base" catchtap="selectOk">选好了</view>
      </view>
    </view>
  </view>

  <!--商品选满提示  -->
  <view class="layer-area layer-confirm" wx:if="{{layer.know}}">
    <view class="layer-shade"></view>
    <view class="layer-page">
      <view class="layer-page-content">改组商品已选满</view>
      <view class="layer-button">
        <view class="btn yes" bindtap="knowHandle">知道了</view>
      </view>
    </view>
  </view> 

  <!--页面底部按钮  -->
  <view class="footer-btn-ok" bindtap="packageOk">选好了</view>
</view>